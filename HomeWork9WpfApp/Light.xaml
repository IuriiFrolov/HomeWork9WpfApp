<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="White"/>
    </Style>
    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}" >
        <Setter Property="TextBlock.Foreground" Value="Black"/>
        <Setter Property="TextBlock.Padding" Value="10" />
    </Style>
    <Style x:Key="TextBlockCenterStyle" BasedOn="{StaticResource TextBlockStyle}" >
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="TextBlockJustifyrStyle" BasedOn="{StaticResource TextBlockStyle}" >
        <Setter Property="TextBlock.TextAlignment" Value="Justify"/>
        <Setter Property="Control.BorderBrush" Value="Black"/>
    </Style>
    <Style x:Key="ControlStyle" BasedOn="{StaticResource WindowStyle}" >
        <Setter Property= "Control.Foreground" Value="Black" />
        <Setter Property= "Control.BorderBrush" Value="Black" />
    </Style>
    
</ResourceDictionary>